{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend of the fullstack app",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:functions": "functions-framework --target=fetchReplaysDaily --port=8080",
    "test:local": "npm run start:functions",
    "test:replay": "node test-single-replay.js",
    "test:replay:win": "set LOG_LEVEL=INFO && node test-single-replay.js",
    "debug:replay": "set LOG_LEVEL=DEBUG && node test-single-replay.js",
    "debug:replay:unix": "LOG_LEVEL=DEBUG node test-single-replay.js",
    "test:replay:retry": "node test-replay-retry.js",
    "inspect:error": "node inspect-error.js"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^7.9.1",
    "@google-cloud/functions-framework": "^3.4.0",
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "mongoose": "^8.7.0",
    "recharts": "^2.15.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
